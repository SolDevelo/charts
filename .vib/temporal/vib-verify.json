{
  "phases": {
    "package": {
      "context": {
        "credentials": [
          {
            "url": "{VIB_ENV_CHARTS_REGISTRY}",
            "authn": {
              "username": "{VIB_ENV_CHARTS_REGISTRY_USERNAME}",
              "password": "{VIB_ENV_CHARTS_REGISTRY_PASSWORD}"
            }
          }
        ],
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/temporal"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/temporal"
        },
        "target_platform": {
          "target_platform_id": "{VIB_ENV_ALTERNATIVE_TARGET_PLATFORM}",
          "size": {
            "name": "M4"
          }
        }
      },
      "actions": [
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib"
            },
            "tests_file": "temporal/goss/goss.yaml",
            "vars_file": "temporal/runtime-parameters.yaml",
            "remote": {
              "pod": {
                "workload": "deploy-temporal-frontend"
              }
            }
          }
        },
        {
          "action_id": "ginkgo",
          "params": {
            "resources": {
              "path": "/.vib/temporal/ginkgo"
            },
            "params": {
              "kubeconfig": "{{kubeconfig}}",
              "namespace": "{{namespace}}",
              "release-name": "temporal",
              "service-port": "18233",
              "temporal-namespace": "default"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "resources": {
              "path": "/.vib/temporal/cypress"
            },
            "endpoint": "lb-temporal-web-https",
            "app_protocol": "HTTPS"
          }
        },
        {
          "action_id": "kubescape",
          "params": {
            "threshold": {VIB_ENV_KUBESCAPE_SCORE_THRESHOLD}
          }
        }
      ]
    }
  }
}
