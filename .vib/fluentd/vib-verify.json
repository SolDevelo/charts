{
  "context": {
    "credentials": [
      {
        "url": "{VIB_ENV_DISTRIBUTION_REGISTRY}",
        "authn": {
          "username": "{VIB_ENV_DISTRIBUTION_REGISTRY_USERNAME}",
          "password": "{VIB_ENV_DISTRIBUTION_REGISTRY_PASSWORD}"
        }
      },
      {
        "url": "https://api.github.com",
        "authn": {
          "header": "Authorization",
          "token": "{VIB_ENV_GIT_TOKEN}"
        }
      }
    ],
    "resources": {
      "url": "{SHA_ARCHIVE}",
      "path": "/bitnami/fluentd"
    }
  },
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "S4",
            "worker_nodes_instance_count": 1
          }
        }
      },
      "actions": [
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib"
            },
            "wait": {
              "file": "fluentd/goss/goss-wait.yaml"
            },
            "tests_file": "fluentd/goss/goss.yaml",
            "remote": {
              "pod": {
                "workload": "ds-fluentd"
              }
            }
          }
        },
        {
          "action_id": "kubescape",
          "params": {
            "threshold": {VIB_ENV_KUBESCAPE_SCORE_THRESHOLD}
          }
        }
      ]
    }
  }
}
