{
  "context": {
    "credentials": [
      {
        "url": "{VIB_ENV_DISTRIBUTION_REGISTRY}",
        "authn": {
          "username": "{VIB_ENV_DISTRIBUTION_REGISTRY_USERNAME}",
          "password": "{VIB_ENV_DISTRIBUTION_REGISTRY_PASSWORD}"
        }
      },
      {
        "url": "{VIB_ENV_GIT_URL}",
        "authn": {
          "header": "Authorization",
          "token": "{VIB_ENV_GIT_TOKEN}"
        }
      }
    ],
    "resources": {
      "url": "{SHA_ARCHIVE}",
      "path": "/bitnami/mariadb-min"
    }
  },
  "phases": {
    "package": {
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "S4"
          }
        }
      },
      "actions": [
        {
          "action_id": "ginkgo",
          "params": {
            "resources": {
              "path": "/.vib/mariadb-min/ginkgo"
            },
            "params": {
              "kubeconfig": "{{kubeconfig}}",
              "namespace": "{{namespace}}",
              "name": "mariadb-min-primary",
              "username": "root",
              "password": "R0ot)Password"
            }
          }
        },
        {
          "action_id": "kubescape",
          "params": {
            "threshold": {VIB_ENV_KUBESCAPE_SCORE_THRESHOLD}
          }
        }
      ]
    }
  }
}
